<!--        <item name="android:windowExitAnimation">@anim/out_anim</item>-->

<!--        <item name="android:activityOpenEnterAnimation">@anim/enter_anim</item>-->
<!--        <item name="android:activityOpenExitAnimation">@null</item>-->
<!--        <item name="android:activityCloseEnterAnimation">@null</item>-->
<!--        <item name="android:activityCloseExitAnimation">@anim/out_anim</item>-->

    </style>

    <style name="TransparentBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>-->

        <!--        <item name="android:windowAnimationStyle">@style/dialog_anim</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyPasswordStyle">
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>